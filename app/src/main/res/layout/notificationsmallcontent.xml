<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_album"
        android:id="@+id/curimage"
        android:layout_gravity="center_vertical"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animals - maroon 5"
        android:layout_marginLeft="5dp"
        android:id="@+id/tvname"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="marquee"
        android:paddingBottom="5dp"
       />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maroon - 5"
            android:layout_marginLeft="5dp"
            android:id="@+id/tvalbum"
            android:maxLines="1"
            android:ellipsize="marquee"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/noti_previous"
            android:id="@+id/notiprev"
            android:clickable="true"
            android:padding="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/barpause"
            android:id="@+id/notiplaypause"
            android:clickable="true"
            android:padding="5dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/noti_next"
            android:id="@+id/notinext"
            android:clickable="true"
            android:padding="5dp"/>


    </LinearLayout>





</LinearLayout>